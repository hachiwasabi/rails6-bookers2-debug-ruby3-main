<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to book.user do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td class=<%= "favorite-" + book.id.to_s %> >
          <%= render "favorites/btn", book: book %>
        </td>
        <td><%= render "book_comments/counter", book: book %></td>
        <td>
        <div id="post_raty_<%= book.id %>" data-score="<%= book.rate || 0 %>"></div>

        <script>
         document.addEventListener("turbolinks:load", function(){
          let elem = document.querySelectorALL('[id^="post_raty_"]').forEach(function(elem){
            let opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              score: elem.dataset.score || 0,
              click: function(score){
                console.log("選択されたスコア:", score);
              }
            };
            raty(elem, opt);
          });
         });
        </script>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>